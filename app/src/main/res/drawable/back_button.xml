<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="rectangle">
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <gradient
                android:startColor="#ffff"
                android:endColor="#00FAFA"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="40dp" />
        </shape>

    </item>

</selector>